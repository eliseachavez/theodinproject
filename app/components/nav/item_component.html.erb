<% if mobile %>
  <%= link_to path, class: "text-gray-600 hover:bg-gray-50 hover:text-gray-900 group flex items-center px-2 py-2 text-base font-medium #{'bg-gray-100 text-gray-900' if active?}"  do %>
    <%= inline_svg_tag icon_path, class: "text-gray-400 group-hover:text-gray-500 mr-4 h-6 w-6", aria: true, title: "#{link_text} icon" %>
    <%= link_text %>
  <% end %>
<% else %>
  <%= link_to link_text, path, class: "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-md font-semibold #{ 'border-gold-500 text-gray-900' if active?}" %>
<% end %>
